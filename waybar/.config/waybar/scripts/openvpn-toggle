#!/bin/sh

if [ "$#" -lt 1 ]; then
  exit 0
fi

for profile in "$@"; do
  service="openvpn-client@${profile}.service"
  if systemctl is-active --quiet "$service"; then
    sudo -n systemctl stop "$service" || exit 0
    exit 0
  fi
done

first="$1"
sudo -n systemctl start "openvpn-client@${first}.service" || exit 0
