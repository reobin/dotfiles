#                        git general config & aliases                                            

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[alias]
  # shortcuts
  a = add .
  s = status
  p = push
  c = commit
  co = checkout
  whoops = commit --amend --no-edit

  # Clean stale branches
  stale = !git cut && git clean-stale
  cut = !git remote prune origin
  clean-stale = "!git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done"

[diff]
  tool = vimdiff
  algorithm = patience

[user]
  name = Robin Gagnon
	email = me@reobin.dev

[difftool]
  prompt = false

[commit]
	gpgsign = true
[gpg]
	program = gpg
[pager]
	branch = false

[include]
  path = ~/.secret.gitconfig
