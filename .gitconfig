[core]
	editor = nvim
	excludesfile = /Users/reobin/.gitignore_global

[alias]
	files = !git diff --name-only $(git merge-base HEAD \"$REVIEW_BASE\")
	stat = !git diff --stat $(git merge-base HEAD \"$REVIEW_BASE\")
	cut = !git remote prune origin
	tree = !watch --color git log --all --pretty=oneline --decorate --graph --color
	br = branch
	d = difftool
	s = !gitin status
	p = push
	c = commit

[diff]
	tool = vimdiff
	algorithm = patience
[user]
	name = Robin Gagnon
	email = robin.gagnon@cortexmedia.ca
[difftool]
	prompt = false
