#                        git general config & aliases                                            

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[alias]
  # shortcuts
  p = push
  c = commit
  co = checkout
  whoops = commit --amend --no-edit

  # Clean stale branches
  cut = !git remote prune origin

  # gitin
  b = !gitin branch
  s = !gitin status
  l = !gitin log

[diff]
  tool = vimdiff
  algorithm = patience

[user]
  name = Robin Gagnon
	email = me@reobin.dev

[difftool]
  prompt = false

[commit]
	gpgsign = true
[gpg]
	program = gpg
[pager]
	branch = false

[include]
  path = ~/.secret.gitconfig
