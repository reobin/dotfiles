# enter fullscreen mode for the focused container
ctrl + alt - t : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
ctrl + alt - f : chunkc tiling::window --toggle float
ctrl + alt - c : chunkc tiling::window --grid-layout 8:8:1:1:6:6

# change layout of desktop
ctrl + alt - u : chunkc tiling::desktop --layout bsp
ctrl + alt - i : chunkc tiling::desktop --layout monocle

# kill focused window
ctrl + alt - q : chunkc tiling::window --close

# change focus
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

ctrl + alt - p : chunkc tiling::window --focus prev
ctrl + alt - n : chunkc tiling::window --focus next

# move focused window
ctrl + alt - h : chunkc tiling::window --warp west
ctrl + alt - j : chunkc tiling::window --warp south
ctrl + alt - k : chunkc tiling::window --warp north
ctrl + alt - l : chunkc tiling::window --warp east

ctrl + alt - r : chunkc tiling::desktop --rotate 90

# send window to desktop and follow focus
ctrl + alt - 1 : chunkc tiling::window --send-to-desktop 1; qes -k "cmd + alt - 1"
ctrl + alt - 2 : chunkc tiling::window --send-to-desktop 2; qes -k "cmd + alt - 2"
ctrl + alt - 3 : chunkc tiling::window --send-to-desktop 3; qes -k "cmd + alt - 3"
ctrl + alt - 4 : chunkc tiling::window --send-to-desktop 4; qes -k "cmd + alt - 4"
ctrl + alt - 5 : chunkc tiling::window --send-to-desktop 5; qes -k "cmd + alt - 5"

# Resize windows
ctrl + alt + cmd - h : chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west;  chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
ctrl + alt + cmd - j : chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
ctrl + alt + cmd - k : chunkc tiling::window --use-temporary-ratio  0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio  0.05 --adjust-window-edge south
ctrl + alt + cmd - l : chunkc tiling::window --use-temporary-ratio  0.05 --adjust-window-edge west;  chunkc tiling::window --use-temporary-ratio  0.05 --adjust-window-edge east

