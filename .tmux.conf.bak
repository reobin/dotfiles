set -g status-position bottom
set -g status-justify centre
set -g status-style "bg=#fafafa"
set -g window-style ""
set -g window-active-style ""

set -g status-left " #[fg=#a626a4]#h #[fg=#a626a4]#{client_width}x#{client_height}"
set -g status-left-style ""
set -g status-left-length 50

set -g status-right "%a %d %b #[fg=#a626a4]%R %Z "
set -g status-right-style "fg=#101012"
set -g status-right-length 25

set -g window-status-current-style "bold"
set -g window-status-style "fg=#101012"
set -g window-status-format " #[fg=#a626a4]#{?#{==:#W,fish},#{b:pane_current_path},#W}#F "
set -g window-status-current-format " #[fg=#a626a4]#{?#{==:#W,fish},#{b:pane_current_path},#W}#F "
set -g window-status-separator ""

set -g pane-active-border-style "fg=#101012"
set -g pane-border-style "fg=#101012"

set -g default-terminal 'tmux-256color'
set -as terminal-overrides ',xterm*:Tc:sitm=\E[3m'

set -s escape-time 0

set -g status-left "#[fg=default]#S"
set -g status-right "%a, #[fg=magenta]%Y-%m-%d #[fg=default]%H:%M %z"
